class Solution {
public:
    int singleNonDuplicate(vector<int>& nums) {
        int low = 0, high = nums.size()-2;
        while(low<=high){
            int mid = low+(high-low)/2;
            //in order to check left half
            //1st instance -> even index
            //2nd instance -> odd index
            if(nums[mid] == nums[mid^1]){
                low = mid+1;
            }
            else{
                high = mid-1;
            }
        }
        return nums[low];
    }
};
